  <% layout("/layouts/boilerplate.ejs") %>
  <script>
     const KEY = <%- JSON.stringify(process.env.MAP_API_KEY) %> ;
     const listing = <%- JSON.stringify(data) %> ;
     const coordinates = <%- JSON.stringify(data.geoCoordinates.coordinates) %> ;
    </script>
    <body>
         <div class="row ">
          <div class="col-8 offset-2 mt-3">
         <h2><b><%= data.title %> </b> </h2>
         </div>
         <div class="col-6 offset-2 mt-2">
      <div class="card">
         <img src= '<%= data.image.url %>' class="card-img-top" alt="Listing_img" height="300vh" >
          <div class="card-body">
            <br>
             <p class="card-text">Owned by : <%= data.owner.username %></p>
              <p class="card-text">
                <%=data.description%><br>
      &#8377; <%= data.price.toLocaleString("en-IN") %>/night + <i>18% GST</i><br> 
         <%=data.location%><br>
         <%=data.country%><br>
    </p>
          </div>
        </div>
        <% if(currUser && data.owner._id.equals(currUser._id)){ %>
       <a href = "/listings/<%= data._id%>/edit" class="btn btn-dark">Edit </a>
       <br><br>
       <form method="POST" action = "/listings/<%=data._id%>?_method=DELETE">
        <button class="btn btn-danger mb-3">Delete  </button>
       </form>
       <% } %>
       </div>
     
        <% if(currUser){ %>
       <div class="col-8 offset-2">
           <hr>
      <h4>Leave a Review</h4>
      <form action="/listings/<%=data._id%>/reviews" method="post" novalidate class="needs-validation">
      <div class=" mt-3">
        <label for="rating">Rating :</label><br>
          <fieldset class="starability-fade">
      <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />

      <input type="radio" id="rate1" name="review[rating]" value="1" />
      <label for="rate1">1 star.</label>

      <input type="radio" id="rate2" name="review[rating]" value="2" />
      <label for="rate2">2 stars.</label>

      <input type="radio" id="rate3" name="review[rating]" value="3" />
      <label for="rate3">3 stars.</label>

      <input type="radio" id="rate4" name="review[rating]" value="4" />
      <label for="rate4">4 stars.</label>

      <input type="radio" id="rate5" name="review[rating]" value="5" />
      <label for="rate5">5 stars.</label>

      <span class="starability-focus-ring"></span>
    </fieldset>
      </div> 
      <div>
         <label for="comment" class="form-label">Comment :</label>
        <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
        <div class="invalid-feedback">
         Add some Prestigious experience
        </div>
      </div>
      <button class="btn btn-outline-dark mt-3 mb-3">Submit</button>
      </form>
       </div>
       <%}%>
         <% if(data.reviews.length > 0) { %>
           <div class= "col-8 offset-2">
           <hr>
             <h4>All Reviews</h4><br>
           <div class="reviews">
         <% for(let review of data.reviews){%>
           <div class="card review-card col-5 ">
            <div class="card-body">
               <div class="review-icon">
           <p class="card-title mb-2"><b>@<%= review.author.username %></b></p>
   <% if(currUser && review.author._id.equals(currUser._id)){ %>
           <form method = "post"action="/listings/<%= data._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button><i class="fa-regular fa-trash-can"></i></button>
           </form>
<% } %>
           </div>
           <hr>
           <p class="card-text starability-result" data-rating=<%=review.rating%>></p>
           <p class="card-text">Comments : <%= review.comment%></p>
           </div>
           </div>
         <%} %>
           </div>
              </div> 
          <% } %>
            <div class= "col-8 offset-2">
            <hr>
            <h2>Where you we'll be</h2>
            <div id="map" style="height: 400px;"></div>
          </div>   
       </div>
    </body>
    
